<Window x:Class="AutoBrowserDownloader.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoBrowserDownloader.WpfApp"
        mc:Ignorable="d"
        Title="AzvaScraper" Height="700" Width="1100" WindowStartupLocation="CenterScreen"
        Icon="/WpfApp/Assets/logo.png">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CBD5E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D3748"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3182CE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F7FAFC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1A202C">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20,30,20,40">
                     <Image Source="/WpfApp/Assets/logo.png" Width="32" Height="32" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                     <TextBlock Text="AzvaScraper" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button x:Name="ScraperBtn" Content="Scraper" Click="Sidebar_Click" Style="{StaticResource SidebarButtonStyle}" Background="#2D3748" Foreground="White" BorderBrush="#3182CE" BorderThickness="4,0,0,0"/>
                <Button x:Name="DownloaderBtn" Content="Downloader" Click="Sidebar_Click" Style="{StaticResource SidebarButtonStyle}"/>
                <Button x:Name="SettingsBtn" Content="Settings" Click="Sidebar_Click" Style="{StaticResource SidebarButtonStyle}"/>
                <Button x:Name="AboutBtn" Content="About" Click="Sidebar_Click" Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Header & Controls -->
            <StackPanel Grid.Row="0" Margin="20" Background="White" x:Name="ScraperControls">
                <Border Background="White" CornerRadius="8" Padding="15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Target URL" Foreground="#718096" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="UrlBox" Grid.Column="1" Text="https://www.dafontfree.io/" Padding="10,8" BorderBrush="#E2E8F0" BorderThickness="1"/>
                        </Grid>
                        
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="Start" Click="Start_Click" Style="{StaticResource ModernButtonStyle}" Background="#4299E1" Width="80"/>
                            <Button Content="Stop"  Margin="10,0,0,0" Style="{StaticResource ModernButtonStyle}" Background="#A0AEC0" Width="80"/>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,0,0">
                                <TextBlock Text="Delay (ms)" Foreground="#718096" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="1000" Width="60" Padding="5" BorderBrush="#E2E8F0" Margin="0,0,15,0"/>
                                <TextBlock Text="Threads" Foreground="#718096" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="3" Width="40" Padding="5" BorderBrush="#E2E8F0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Main Dashboard Area -->
            <TabControl x:Name="MainTabs" Grid.Row="1" Margin="20,0,20,20" BorderThickness="0" Background="Transparent" SelectedIndex="0">
                <!-- Hide Headers to integrate with Sidebar -->
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </Style>
                </TabControl.ItemContainerStyle>

                <!-- Page 0: Dashboard -->
                <TabItem Header="Dashboard">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Extracted Data -->
                        <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,0,10" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Extracted Data" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <DataGrid Grid.Row="1" x:Name="ResultsGrid" AutoGenerateColumns="True" 
                                          HeadersVisibility="Column" GridLinesVisibility="Horizontal" 
                                          Background="White" BorderThickness="0"
                                          HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                          AutoGeneratingColumn="ResultsGrid_AutoGeneratingColumn">
                                </DataGrid>
                            </Grid>
                        </Border>

                        <!-- Logs Section -->
                        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#2D3748" CornerRadius="8" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Status: " Foreground="#A0AEC0" FontWeight="Bold"/>
                                    <TextBlock Text="Idle" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                                <TextBox Grid.Row="1" x:Name="LogBox" Background="Transparent" Foreground="#E2E8F0" BorderThickness="0" 
                                         IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12"/>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Page 1: Settings / Config -->
                <TabItem Header="Settings">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                        <StackPanel Margin="10">
                            <!-- Scraper Configuration -->
                            <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Scraper Configuration" FontWeight="Bold" FontSize="18" Foreground="#2D3748" Margin="0,0,0,20"/>
                                    
                                    <TextBlock Text="List Page Selectors" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,10"/>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Item Container" VerticalAlignment="Center" Margin="0,5"/>
                                        <TextBox x:Name="CfgItemContainer" Grid.Row="0" Grid.Column="1" Padding="8" Margin="0,5" BorderBrush="#E2E8F0"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Name Selector" VerticalAlignment="Center" Margin="0,5"/>
                                        <TextBox x:Name="CfgNameSelector" Grid.Row="1" Grid.Column="1" Padding="8" Margin="0,5" BorderBrush="#E2E8F0"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Category Selector" VerticalAlignment="Center" Margin="0,5"/>
                                        <TextBox x:Name="CfgCategorySelector" Grid.Row="2" Grid.Column="1" Padding="8" Margin="0,5" BorderBrush="#E2E8F0"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Image Selector" VerticalAlignment="Center" Margin="0,5"/>
                                        <TextBox x:Name="CfgImageSelector" Grid.Row="3" Grid.Column="1" Padding="8" Margin="0,5" BorderBrush="#E2E8F0"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Link URL Selector" VerticalAlignment="Center" Margin="0,5"/>
                                        <TextBox x:Name="CfgUrlSelector" Grid.Row="4" Grid.Column="1" Padding="8" Margin="0,5" BorderBrush="#E2E8F0"/>
                                    </Grid>

                                    <TextBlock Text="Detail Page Selectors" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,10,0,10"/>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Description Selector" VerticalAlignment="Center" Margin="0,5"/>
                                        <TextBox x:Name="CfgDescSelector" Grid.Row="0" Grid.Column="1" Padding="8" Margin="0,5" BorderBrush="#E2E8F0"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Download BTN Selector" VerticalAlignment="Center" Margin="0,5"/>
                                        <TextBox x:Name="CfgDownloadSelector" Grid.Row="1" Grid.Column="1" Padding="8" Margin="0,5" BorderBrush="#E2E8F0"/>
                                    </Grid>
                                    
                                    <Button Content="Save Configuration" Click="SaveConfig_Click" Style="{StaticResource ModernButtonStyle}" HorizontalAlignment="Right" Width="180" Height="40" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Legacy Step Editor (Optional, kept at bottom) -->
                            <Expander Header="Advanced: Step Actions (Optional)" Background="White" Padding="10">
                                <DataGrid x:Name="StepsGrid" AutoGenerateColumns="False" Margin="10" CanUserAddRows="True" Height="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                                        <DataGridTextColumn Header="Selector" Binding="{Binding Selector}" Width="*"/>
                                        <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="100"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="150"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Page 2: Downloader -->
                <TabItem Header="Downloader">
                    <Grid Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Drop Zone -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Border x:Name="DropZone" Height="180" Background="White" BorderBrush="#CBD5E0" BorderThickness="2" CornerRadius="12"
                                    AllowDrop="True" Drop="DropZone_Drop" PreviewDragOver="DropZone_DragOver" MouseLeftButtonUp="DropZone_Click" Cursor="Hand">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ“" FontSize="42" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Drag &amp; Drop CSV File Here" FontSize="16" FontWeight="SemiBold" Foreground="#4A5568" Margin="0,5,0,2"/>
                                    <TextBlock Text="or click to browse" FontSize="13" Foreground="#A0AEC0" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="FileNameText" FontSize="14" Foreground="#3182CE" FontWeight="Bold" Margin="0,8,0,0" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <!-- Clear Button (X) -->
                            <Button x:Name="ClearFileBtn" Content="âœ•" Click="ClearFile_Click" VerticalAlignment="Top" HorizontalAlignment="Right" 
                                    Margin="10" Width="30" Height="30" Background="#FC8181" Foreground="White" FontWeight="Bold" 
                                    Visibility="Collapsed" Style="{StaticResource ModernButtonStyle}"/>
                        </Grid>

                        <!-- Download Path Selector -->
                        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Download Subdirectory" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="DownloadPathBox" Padding="10" VerticalContentAlignment="Center" BorderBrush="#E2E8F0" BorderThickness="1"/>
                                    <Button Grid.Column="1" Content="Browse" Click="BrowseFolder_Click" Style="{StaticResource ModernButtonStyle}" Margin="10,0,0,0" Padding="15,0" Height="40"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Download Status -->
                        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Download Progress" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                                
                                <TextBox Grid.Row="1" x:Name="DownloadLogBox" Background="#F7FAFC" Foreground="#4A5568" BorderThickness="0" 
                                         IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" Margin="0,0,0,15"/>

                                <!-- Progress section -->
                                <Grid Grid.Row="2" Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ProgressBar x:Name="DownloadProgress" Height="10" Foreground="#48BB78" Background="#E2E8F0" BorderThickness="0"/>
                                    <TextBlock x:Name="ProgressText" Grid.Column="1" Text="0/0" Margin="10,0,0,0" Foreground="#718096" VerticalAlignment="Center"/>
                                </Grid>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button x:Name="StopDownloadBtn" Content="Stop" Click="StopDownload_Click" Style="{StaticResource ModernButtonStyle}" 
                                            Background="#A0AEC0" Width="100" Height="40" Margin="0,0,10,0" IsEnabled="False"/>
                                    <Button x:Name="StartDownloadBtn" Content="Start Downloading" Click="StartDownload_Click" Style="{StaticResource ModernButtonStyle}" 
                                            Background="#3182CE" Width="150" Height="40"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Page 3: About -->
                <TabItem Header="About">
                    <Border Background="White" CornerRadius="12" Margin="0,20,0,0" Padding="30">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/WpfApp/Assets/logo.png" Width="120" Height="120" Margin="0,0,0,30" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="AzvaScraper" FontSize="28" FontWeight="Bold" Foreground="#2D3748" HorizontalAlignment="Center"/>
                            <TextBlock Text="Version 1.0.0" FontSize="16" Foreground="#718096" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="A powerful automated web scraping and downloading tool." FontSize="14" Foreground="#A0AEC0" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="400"/>
                            <Separator Margin="0,40" Background="#E2E8F0" Height="1"/>
                            <TextBlock Text="Â© 2025 ViiSoftware" FontSize="14" Foreground="#CBD5E0" HorizontalAlignment="Center"/>
                            <TextBlock Text="All Rights Reserved" FontSize="12" Foreground="#E2E8F0" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
