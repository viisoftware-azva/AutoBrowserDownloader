<Window x:Class="AutoBrowserDownloader.WpfApp.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="350" Width="400" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White"
        BorderBrush="#3182CE"
        BorderThickness="1"
        Icon="/WpfApp/Assets/logo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Close -->
        <Button Grid.Row="0" Content="✕" HorizontalAlignment="Right" Margin="10" 
                Background="Transparent" BorderThickness="0" FontSize="16" Foreground="#A0AEC0"
                Click="Close_Click" Cursor="Hand"/>

        <!-- Content -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Image Source="/WpfApp/Assets/logo.png" Width="100" Height="100" Margin="0,0,0,20"/>
            
            <TextBlock Text="Auto Browser Downloader" FontSize="20" FontWeight="Bold" Foreground="#2D3748" HorizontalAlignment="Center"/>
            <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="14" Foreground="#718096" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            
            <TextBlock Text="© 2025 ViiSoftware" FontSize="12" Foreground="#CBD5E0" HorizontalAlignment="Center" Margin="0,30,0,0"/>
        </StackPanel>

    </Grid>
</Window>
